# Auto detect text files and normalize to LF
* text=auto eol=lf

# Explicitly declare text files
*.js text eol=lf
*.jsx text eol=lf
*.cjs text eol=lf
*.json text eol=lf
*.md text eol=lf
*.css text eol=lf
*.html text eol=lf
*.txt text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Windows scripts should use CRLF
*.cmd text eol=crlf
*.ps1 text eol=crlf
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.ico binary
*.gif binary
*.webp binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
